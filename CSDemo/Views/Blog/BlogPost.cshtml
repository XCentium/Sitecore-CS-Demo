@using System.Linq;
@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<CSDemo.Models.Blog.BlogViewModel>
@if (Model == null)
{
    return;
}

@{
    var firstAuthor = Model.Blog.Author.FirstOrDefault();
    var author = firstAuthor != null ? firstAuthor.FullName : "Author";
}
<!-- ==========================
    BLOG - START
=========================== -->
<section class="content blog">
    <div class="container">
        <h2 class="hidden">Blog</h2>
        <div class="row">
            <div class="col-sm-9">

                <!-- POST - START -->
                <article class="post">
                    <div class="post-left">
                        <div class="author">
                            @if (Model.Blog.Author.FirstOrDefault() != null)
                            {
                                @RenderImage(Model.Blog.Author.FirstOrDefault(), t => t.ProfileImage, new { mh = 100, @class = "img-responsive  img-circle" }, true)
                            }
                            else
                            {
                                <img src="/assets/images/avatar/avatar_01.jpg" class="img-responsive img-circle" alt="">
                            }
                            <span>Posted by</span>
                            <span class="name">@author</span>
                        </div>
                    </div>
                    <h3><a href="#">@Model.Blog.Title</a></h3>
                    <div class="meta">
                        <div class="date">@Model.Blog.PublishDate.ToString("dddd, d, yyyy")</div>
                        <div class="date visible-xs-inline-block">@Model.Blog.PublishDate.ToShortDateString()</div>
                        @if (Model.Blog.Category.Any())
                        {
                            foreach (var category in Model.Blog.Category)
                            {
                                <div class="category">@category.CategoryName</div>
                            }
                        }
                        else
                        {
                            <div class="category">Uncategorized</div>
                        }
                    </div>
                    <div class="attachment">
                        @RenderImage(Model.Blog, t => t.Main, new { @class = "img-responsive" }, true)
                    </div>
                    @Model.Blog.Body
                    <div class="post-bottom clearfix">
                        @if (Model.Blog.Tags.Any())
                        {
                            <div class="tags">
                                @foreach (var tag in Model.Blog.Tags)
                                {
                                    <span class="label"><i class="fa fa-tag"></i><a href="~/blogs/tag/@tag.TagName">@tag.TagName</a></span>
                                }
                            </div>
                        }
                    </div>
                </article>
                <!-- POST - END -->
            </div>
            <div class="col-sm-3">
                <aside class="sidebar right">

                    <!-- WIDGET:SEARCH - START -->
                    <div class="widget widget-search">
                        <h3>Search</h3>
                        <div class="widget-body">
                            <form>
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Search">
                                    <span class="input-group-btn">
                                        <button class="btn btn-primary" type="button"><i class="fa fa-search"></i></button>
                                    </span>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- WIDGET:SEARCH - START -->
                    <!-- WIDGET:POST CATEGORIES - START -->
                    <div class="widget widget-post-categories">
                        <h3>Categories</h3>
                        <div class="widget-body">
                            @if (Model.Categories != null && Model.Categories.Any())
                            {
                                <ul class="list-unstyled">
                                    @foreach (var category in Model.Categories)
                                    {
                                        <li><a href="~/blogs/category/@category.CategoryName">@category.CategoryName<span class="badge">@category.TotalBlogs</span></a></li>
                                    }
                                </ul>
                            }
                        </div>
                    </div>
                    <!-- WIDGET:POST CATEGORIES - START -->
                    <!-- WIDGET:TAGS - START -->
                    <div class="widget widget-tags">
                        <h3>Tags</h3>
                        <div class="widget-body">
                            @if (Model.Tags != null && Model.Tags.Any())
                            {
                                <div class="tags">
                                    @foreach (var tag in Model.Tags)
                                    {
                                        <span class="label"><i class="fa fa-tag"></i><a href="~/blogs/tag/@tag.TagName">@tag.TagName</a></span>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                    <!-- WIDGET:TAGS - ENDS -->
                </aside>
            </div>
        </div>
    </div>
</section>
<!-- ==========================
    BLOG - END
=========================== -->
