<!-- ==========================
JUMBOTRON - START
=========================== -->
@if (Model == null)
{
    return;
}
<section class="content jumbotron">
    @if (IsInEditingMode)
    {
        //THIS SHOWS UP FINE IF UNCOMMENTED
        @*<div id="carousel" class="nav-inside">
                @foreach (var slide in Model)
                {
                    using (BeginEditFrame(slide, "Edit Metadata", x => x.Content, x => x.Image))
                    {
                        <div class="slide-body" style="background-color:black">
                            @Editable(slide, x => x.Content)
                        </div>

                        @Editable(slide, x => x.Image)
                    }
                }
            </div>*@
        <div id="div-carousel" class="nav-inside">
            @foreach (var slide in Model.Where(t => t != null))
            {
                using (BeginEditFrame(slide, "Edit Hero Slide", x => x.Content, x => x.Image))
                {
                    <div class="item slide-1" style="background: url(@slide.Image.Src) center no-repeat">
                        <div class="slide-mask"></div>
                        <div class="slide-body">
                            <div class="container">
                                @Editable(slide, x => x.Content)
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    }
    else
    {
        <div id="homepage-1-carousel" class="nav-inside owl-animation">
            @foreach (var slide in Model.Where(t => t != null))
            {
                <div class="item slide-1" style="background: url(@slide.Image.Src) center no-repeat">
                    <div class="slide-mask"></div>
                    <div class="slide-body">
                        <div class="container">
                            @Html.Raw(@slide.Content)
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</section>
