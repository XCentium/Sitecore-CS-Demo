@using Sitecore.Mvc;
@using CSDemo.Models.Cart;
@using CSDemo.Models.Checkout.Cart


@{


    var cartHelper = new CartHelper();
    CSDemo.Models.Cart.ShoppingCart shoppingCart = cartHelper.GetMiniCart();


}

<!-- ==========================
    MY ACCOUNT - START
=========================== -->
<section class="content account">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <article class="account-content checkout-steps">

                    <div class="row row-no-padding">
                        <div class="col-xs-6 col-sm-3">
                            <div class="checkout-step active">
                                <div class="number">1</div>
                                <div class="title">Billing & Shipping Address</div>
                            </div>
                        </div>
                        <div class="col-xs-6 col-sm-3">
                            <div class="checkout-step active">
                                <div class="number">2</div>
                                <div class="title">Shipping Method</div>
                            </div>
                        </div>
                        <div class="col-xs-6 col-sm-3">
                            <div class="checkout-step active">
                                <div class="number">3</div>
                                <div class="title">Payment Method</div>
                            </div>
                        </div>
                        <div class="col-xs-6 col-sm-3">
                            <div class="checkout-step active">
                                <div class="number">4</div>
                                <div class="title">Review</div>
                            </div>
                        </div>
                    </div>

                    <div class="progress checkout-progress hidden-xs"><div class="progress-bar" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width:100%;"></div></div>

                    <form id="review-form" name="review-form">
                        <h3>Review Order</h3>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="box">
                                    <h4>Billing Address</h4>
                                    <ul class="list-unstyled" id="billingAddress"></ul>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="box">
                                    <h4>Shipping Address</h4>
                                    <ul class="list-unstyled" id="shippingAddress"></ul>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="box">
                                    <h4>Payment Method</h4>
                                    <ul class="list-unstyled" id="paymentMethod"></ul>
                                </div>
                                <div class="box">
                                    <h4>Shipping Method</h4>
                                    <ul class="list-unstyled" id="shippingMethod"></ul>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="box">
                                    <h4>Order Details</h4>
                                    <ul class="list-unstyled" id="orderDetails"></ul>
                                    <h5>Addition information:</h5>
                                    <p id="AdditionalInformation"></p>
                                </div>
                            </div>
                        </div>
                        @if (shoppingCart != null && shoppingCart.Total > 0)
                        {

                            var lineTotal = String.Format("{0:0.00}", shoppingCart.LineTotal);
                            var discount = String.Format("{0:0.00}", shoppingCart.Discount);

                            <div class="products-order checkout shopping-cart">
                                <div class="table-responsive">
                                    <table class="table table-products">
                                        <thead>
                                            <tr>
                                                <th></th>
                                                <th>Product</th>
                                                <th>Unit Price</th>
                                                <th>Quantity</th>
                                                <th>Subtotal</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (CSDemo.Models.Cart.CartItem cartItem in shoppingCart.CartItems)
                                            {
                                                var unitPrice = String.Format("{0:0.00}", cartItem.UnitPrice);
                                                var subTotal = String.Format("{0:0.00}", cartItem.SubTotal);
                                                <tr>
                                                    <td class="col-xs-1"><img src="@cartItem.ImageUrl" alt="" class="img-responsive"></td>
                                                    <td class="col-xs-4 col-md-5"><h4><a href="/category/@cartItem.Category/@cartItem.CSProductId">@cartItem.ProductName</a><small></small></h4></td>
                                                    <td class="col-xs-2 text-center"><span>$@unitPrice</span></td>
                                                    <td class="col-xs-2 col-md-1 text-center"><span><b>@cartItem.Quantity</b></span></td>
                                                    <td class="col-xs-2 text-center"><span><b>$@subTotal</b></span></td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                </div>

                                <ul class="list-unstyled order-total">
                                    <li>Total products<span>$@lineTotal</span></li>
                                    <li>Discount<span>- $@discount</span></li>
                                    <li>Subtotal<span class="total">$@lineTotal</span></li>
                                </ul>
                            </div>
                            <div class="clearfix">
                                <div class="checkbox pull-left">
                                    <input type="checkbox" id="checkout_terms_conditions" name="checkout_terms_conditions" required />
                                    <label for="checkout_terms_conditions">I have read and agree to the <a href="/terms-and-conditions" target="_blank">Terms & Conditions</a></label>
                                </div>
                                <a href="/checkout/thank-you" data-contextitemid="@Sitecore.Context.Item.ID.ToString()" class="btn btn-primary btn-lg pull-right SubmitReview">Confirm Order</a>
                            </div>
                        }
                    </form>
                </article>
            </div>
        </div>
    </div>
</section>
<!-- ==========================
    MY ACCOUNT - END
=========================== -->
